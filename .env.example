# Server
# Prefer platform PORT; locally you can set SERVER_PORT
PORT=
SERVER_PORT=4000
 
# CORS allowed origins (comma-separated). Set on Render to restrict frontend origin
# Example: http://qcheck.qssun.solar
CORS_ORIGIN=

# MySQL
DB_HOST=
DB_PORT=3306
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_SSL=false

# Frontend -> Backend base URL (used by Vite)
VITE_SERVER_URL=

# External fingerprint API integration (optional)
EXTERNAL_API_BASE=http://qssun.dyndns.org:8085/personnel/api/

# Auth configuration
AUTH_MODE=basic
API_USERNAME=
API_PASSWORD=
API_JWT_TOKEN=
JWT_SECRET=change-me

# Env-based demo users (MVP)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=
EMPLOYEE_USERNAME=employee
EMPLOYEE_PASSWORD=

# ZKTeco device connector (optional)
ZK_ENABLED=false
ZK_HOST=
ZK_PORT=4370
ZK_INPORT=5200
ZK_TIMEOUT_MS=5000
ZK_PASSWORD=
ZK_INTERVAL_MS=60000